local Window = Library:MakeWindow({
    Title = "TienBip",
    SubTitle = "by You",
    SaveFolder = "RedzHub"
})

-- TAB
local Tab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998"
})

-- SECTION
local Section = Tab:AddSection({
    Name = "Main Functions"
})

-- BUTTON
Tab:AddButton({
    Name = "Test Button",
    Callback = function()
        print("Redz Hub Button Clicked")
    end
})

-- TOGGLE
Tab:AddToggle({
    Name = "Auto Farm",
    Default = false,
    Callback = function(Value)
        print("Auto Farm:", Value)
    end
})

-- SLIDER
Tab:AddSlider({
    Name = "WalkSpeed",
    Min = 16,
    Max = 200,
    Default = 16,
    Increment = 1,
    Callback = function(Value)
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
    end
})

-- DROPDOWN
Tab:AddDropdown({
    Name = "Select Mode",
    Options = {"Easy", "Normal", "Hard"},
    Default = "Easy",
    Callback = function(Value)
        print("Mode:", Value)
    end
})

-- NOTIFICATION
Library:Notify({
    Title = "TienBop Hub",
    Content = "UI Loaded Successfully!",
    Duration = 5
})

